{% extends '::base_layout.html.twig' %}

{% block title %}
    {% if title is defined %}
        {{ title }}
    {% endif %}
{% endblock %}
{% block stylesheets %}
    {% stylesheets
        '@StarRatingBundle/Resources/public/css/rating.css'
        filter="cssrewrite"
    %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
    {% endstylesheets %}
    {% stylesheets filter='scssphp'
        "@ClientBundle/Resources/public/scss/client-unit.scss"
        "@ClientBundle/Resources/public/scss/service.scss"
        "@CondominiumManagementBundle/Resources/public/scss/issue.scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
{% block base_content %}
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top"
             role="navigation"
             style="margin-bottom: 0">
            {% include ':navigation:header.html.twig' %}
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="navsidebar-fixed-left navbar-collapse">
                {% include 'ClientBundle::left_menu.html.twig' %}
            </div>
            <div class="main-content-area">
                <div class="container-fluid">
                    {% if title is defined %}
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">{{ title }}</h1>
                        </div>
                    </div>
                    {% endif %}
                    {% block content %}{% endblock %}
                </div>
                <!-- /.container-fluid -->
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        "@ClientBundle/Resources/public/js/client-unit.js"
        '@StarRatingBundle/Resources/public/js/rating.js'
    %}
        <script type="application/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
