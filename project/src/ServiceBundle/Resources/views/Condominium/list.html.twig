{% extends 'ServiceBundle::content_page_layout.html.twig' %}
{% set title = 'service.title'|trans ~ ' - Served Condominiums' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default panel-green">
                <div class="panel-heading">
                    {{'building.label.served.buildings'|trans}}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{'condominium.th.id'|trans}}</th>
                                <th>{{'condominium.th.name'|trans}}</th>
                                <th>{{'condominium.th.address'|trans}}</th>
                                <th>{{'condominium.th.creation.date'|trans}}</th>
                                <th>{{'condominium.th.actions'|trans}}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for condominium in service.condominiums %}
                                <tr>
                                    <td>{{ condominium.id }}</td>
                                    <td>
                                        {{ condominium.name }}
                                    </td>
                                    <td>{{ condominium.address }}</td>
                                    <td>{{ condominium.creationDate | date }}</td>
                                    <td>
                                        <form method="post"
                                              action="{{ path(
                                                  'service_condominium_remove',
                                                  {
                                                      'service': service.id,
                                                      'condominium': condominium.id
                                                  }
                                              ) }}"
                                        >
                                            <input type="hidden"
                                                   name="_method"
                                                   value="DELETE"
                                            >
                                            <input type="submit"
                                                   class="btn btn-warning"
                                                   value="{{ 'btn.remove'|trans }}"
                                            >
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default panel-yellow">
                <div class="panel-heading">
                    {{'building.label.available.buildings'|trans}}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{'condominium.th.id'|trans}}</th>
                                <th>{{'condominium.th.name'|trans}}</th>
                                <th>{{'condominium.th.address'|trans}}</th>
                                <th>{{'condominium.th.creation.date'|trans}}</th>
                                <th>{{'condominium.th.actions'|trans}}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for condominium in condominiums %}
                                <tr>
                                    <td>{{ condominium.id }}</td>
                                    <td>
                                        {{ condominium.name }}
                                    </td>
                                    <td>{{ condominium.address }}</td>
                                    <td>{{ condominium.creationDate | date }}</td>
                                    <td>
                                        <form method="post"
                                              action="{{ path(
                                              'service_condominium_add',
                                              {
                                                  'service': service.id,
                                                  'condominium': condominium.id
                                              }
                                              ) }}"
                                        >
                                            <input type="submit"
                                                   class="btn btn-success"
                                                   value="{{ 'btn.add'|trans }}"
                                            >
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
