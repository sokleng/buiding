{% extends 'RealtyCompanyBundle::content_page_layout.html.twig' %}
{% set title =  company.name ~ ' - ' ~ 'contact.title'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('company_contacts_new', {'company': company.id}) }}"
                       class="btn btn-success"
                    >
                        {{ 'contact.action.create'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'contact.th.id'|trans }}</th>
                                <th>{{ 'contact.th.name'|trans }}</th>
                                <th>{{ 'contact.th.gender'|trans }}</th>
                                <th>{{ 'contact.th.phone.number'|trans }}</th>
                                <th>{{ 'contact.th.email'|trans }}</th>
                                <th>{{ 'contact.th.nationality'|trans }}</th>
                                <th>{{ 'contact.th.creation.date'|trans }}</th>
                                <th>{{ 'contact.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for contact in company.contacts %}
                                <tr>
                                    <td>{{ contact.idNumber }}</td>
                                    <td>{{ contact.name }}</td>
                                    <td>
                                        {% if contact.isMale() %}
                                            {{ 'contact.label.gender.male'|trans }}
                                        {% endif %}
                                        {% if contact.isFemale() %}
                                            {{ 'contact.label.gender.female'|trans }}
                                        {% endif %}
                                        {% if contact.isNA() %}
                                            {{ 'contact.label.gender.na'|trans }}
                                        {% endif %}
                                    </td>
                                    <td>{{ contact.phoneNumber }}</td>
                                    <td>{{ contact.email }}</td>
                                    <td>{{ contact.nationality }}</td>
                                    <td>{{ contact.creationDate | date }}</td>
                                    <td>
                                        <a
                                            href="{{ path(
                                                'company_contacts_show',
                                                {'company': company.id, 'contact': contact.id}
                                            ) }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{ path(
                                                'company_contacts_edit',
                                                {'company': company.id, 'contact': contact.id}
                                            ) }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
