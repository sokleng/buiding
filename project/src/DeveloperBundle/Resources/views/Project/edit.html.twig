{% extends 'DeveloperBundle::content_page_layout.html.twig' %}
{% set title = 'developer_projects.title.edit'|trans ~ ': ' ~ project.name %}

{% block content %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.name'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.name,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.address'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.address,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.district'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(
                        edit_form.district,
                        {
                            'attr': {
                                'class' : 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.floor.count'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.floorCount,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.contact.name'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.contactName,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.contact.number'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.contactNumber,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.description'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.description,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input
                        type="submit"
                        value="{{ 'btn.save'|trans }}"
                        class="btn btn-success"
                    >
                    <a
                        href="{{ path('developer_projects_list',
                            { 'developer':developer.id })
                        }}"
                        class="btn btn-default"
                    >
                        {{ 'link.back'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(edit_form) }}
    <form method="post"
        action="#"
    >
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input type="hidden"
                        name="_method"
                        value="DELETE"
                    >
                    <input type="submit"
                        class="btn btn-danger"
                        value="{{ 'btn.delete'|trans }}"
                    >
                </div>
            </div>
        </div>
    </form>
{% endblock %}
