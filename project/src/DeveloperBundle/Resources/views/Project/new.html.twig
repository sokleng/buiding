{% extends 'DeveloperBundle::content_page_layout.html.twig' %}
{% set title = 'developer.projects.new.title.new'|trans %}

{% block content %}
    {{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.name'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.name, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.address'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.address, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.district'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.district, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.floor.count'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.floorCount, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.contact.name'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.contactName, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.contact.number'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.contactNumber, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'developer_project.label.description'|trans }}
                </label>
                <div class="col-xs-4">
                    {{ form_widget(form.description, {'attr': {'class' : 'form-control', 'rows' : 10}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <input
                    type="submit"
                    value="{{ 'btn.create'|trans }}"
                    class="btn btn-success"
                />
                <a
                    href="{{
                        path('developer_projects_list', {'developer':developer.id})
                    }}"
                    class="btn btn-default"
                >
                    {{ 'link.back'|trans }}
                </a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
