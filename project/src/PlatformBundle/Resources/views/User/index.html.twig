{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = 'users.title'|trans %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{path('platform_user_new')}}"
                       class="btn btn-success"
                    >
                        {{ 'link.user.add.new'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th class="col-xs-2">{{ 'users.th.id'|trans }}</th>
                                <th class="col-xs-3">{{ 'users.th.name'|trans }}</th>
                                <th class="col-xs-4">{{ 'users.th.phone.number'|trans }}</th>
                                <th class="col-xs-3">{{ 'users.th.action'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                {% if loop.index % 2 == 0 %}
                                    {% set rowClass = "even" %}
                                {% else %}
                                    {% set rowClass = "odd" %}
                                {% endif %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.phoneNumber }}</td>
                                    <td>
                                        <a href="{{
                                                path(
                                                    'platform_user_show',
                                                    {'user': user.id}
                                                )
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a href="{{
                                                path(
                                                    'platform_user_edit',
                                                    {'user': user.id}
                                                )
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                        <a href="{{
                                                path(
                                                    'platform_user_delete',
                                                    {'user': user.id}
                                                )
                                            }}"
                                            class="btn btn-sm btn-danger"
                                        >
                                            {{ 'action.delete'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
