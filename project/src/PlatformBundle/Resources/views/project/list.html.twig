{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = 'realty_projects.title'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('platform_project_new') }}"
                       class="btn btn-success"
                    >
                        {{ 'realty_projects.action.create'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'realty_projects.th.id'|trans }}</th>
                                <th>{{ 'realty_projects.th.name'|trans }}</th>
                                <th>{{ 'realty_projects.th.contact.name'|trans }}</th>
                                <th>{{ 'realty_projects.th.contact.number'|trans }}</th>
                                <th>{{ 'realty_projects.th.creation.date'|trans }}</th>
                                <th>{{ 'realty_projects.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td>{{ project.id }}</td>
                                    <td>{{ project.name }}</td>
                                    <td>{{ project.contactName }}</td>
                                    <td>{{ project.contactNumber }}</td>
                                    <td>{{ project.creationDate | date }}</td>
                                    <td>
                                        <a
                                            href="{{ path('platform_project_show',
                                                {
                                                    'project' : project.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{ path('platform_project_edit',
                                                {
                                                    'project': project.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
