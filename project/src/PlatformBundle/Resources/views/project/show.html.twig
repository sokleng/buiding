{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = 'realty_projects.title.show'|trans ~ ': ' ~ project.name %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>{{ 'realty_projects.th.id'|trans }}</th>
                            <td>{{ project.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.developer'|trans }}</th>
                            <td>{{ project.developer }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.name'|trans }}</th>
                            <td>{{ project.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.contact.name'|trans }}</th>
                            <td>{{ project.contactName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.contact.number'|trans }}</th>
                            <td>{{ project.contactNumber }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.description'|trans }}</th>
                            <td>{{ project.description }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'realty_projects.th.creation.date'|trans }}</th>
                            <td>{{ project.creationDate | date }}</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-10">
                                            <a
                                                    href="{{ path(
                                                    'platform_project_edit',
                                                    { 'project': project.id }
                                                    ) }}"
                                                    class="btn btn-primary"
                                            >
                                                {{ 'link.action.edit'|trans }}
                                            </a>
                                            <a
                                                    href="{{ path('platform_project_list') }}"
                                                    class="btn btn-default"
                                            >
                                                {{ 'link.back'|trans }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <form method="post"
                                      action="{{ path(
                                      'platform_project_delete',
                                      {'project': project.id}
                                      ) }}"
                                >
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xs-10">
                                                <input type="hidden"
                                                       name="_method"
                                                       value="DELETE"
                                                >
                                                <input type="submit"
                                                       class="btn btn-danger"
                                                       value="{{ 'btn.delete'|trans }}"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>{{ 'realty_projects.title.panel.managers'|trans }}</h1>
                    <form method="post"
                          action="{{ path('platform_project_managers_new', {'project': project.id} ) }}"
                    >
                        <input title="{{ 'realty_projects.title.input.username'|trans }}"
                               placeholder="{{ 'realty_projects.placeholder.username'|trans }}"
                               name="username"
                               type="text"
                        />
                        <input type="submit"
                               class="btn btn-success"
                               value="{{ 'realty_projects.btn.add.user'|trans }}"
                        >
                    </form>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'realty_projects.th.id'|trans }}</th>
                                <th>{{ 'realty_projects.th.name'|trans }}</th>
                                <th>{{ 'realty_projects.th.email'|trans }}</th>
                                <th>{{ 'realty_projects.th.phone.number'|trans }}</th>
                                <th>{{ 'realty_projects.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for manager in project.managers %}
                                <tr>
                                    <td>{{ manager.id }}</td>
                                    <td>{{ manager.name }}</td>
                                    <td>{{ manager.email }}</td>
                                    <td>{{ manager.phoneNumber }}</td>
                                    <td>
                                        <form method="post"
                                              action="{{ path(
                                              'platform_project_managers_delete',
                                              {
                                                  'project': project.id,
                                                  'manager': manager.id
                                              }
                                              ) }}"
                                        >
                                            <input type="hidden"
                                                   name="_method"
                                                   value="DELETE"
                                            >
                                            <input type="submit"
                                                   class="btn btn-sm btn-danger"
                                                   value="{{ 'btn.delete'|trans }}"
                                            >
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
