{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = 'services.title'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('platform_service_new') }}"
                       class="btn btn-success"
                    >
                        {{ 'services.action.create'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'services.th.id'|trans }}</th>
                                <th>{{ 'services.th.type'|trans }}</th>
                                <th>{{ 'services.th.title'|trans }}</th>
                                <th>{{ 'services.th.creation.date'|trans }}</th>
                                <th>{{ 'services.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr>
                                    <td>{{ service.id }}</td>
                                    <td>{{ service.type }}</td>
                                    <td>
                                        <a href="{{ path('platform_service_show', { 'id': service.id }) }}">{{ service.title }}</a>
                                    </td>
                                    <td>{{ service.creationDate | date }}</td>
                                    <td>
                                        <a
                                            href="{{ path('platform_service_show',
                                                {
                                                    'id' : service.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{ path('platform_service_edit',
                                                {
                                                    'id': service.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    {{ knp_pagination_render(services) }}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
