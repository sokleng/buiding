{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = "developers.title"|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{path('platform_developers_new')}}"
                       class="btn btn-success"
                    >
                        {{ 'developers.action.create'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'developers.th.id'|trans }}</th>
                                <th>{{ 'developers.th.name'|trans }}</th>
                                <th>{{ 'developers.th.description'|trans }}</th>
                                <th>{{ 'developers.th.creation.date'|trans }}</th>
                                <th>{{ 'developers.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for developer in developers %}
                                <tr>
                                    <td>{{ developer.id }}</td>
                                    <td>{{ developer.name }}</td>
                                    <td>{{ developer.description }}</a></td>
                                    <td>{{ developer.creationDate | date }}</td>
                                    <td>
                                        <a
                                            href="{{ path('platform_developer_show',
                                                {
                                                    'developer': developer.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{ path('platform_developer_edit',
                                                {
                                                    'developer': developer.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
