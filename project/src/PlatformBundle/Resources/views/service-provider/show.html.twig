{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title =  'service_providers.title.show'|trans ~ ': ' ~ serviceProvider.companyName %}

{% block content %}
    <div class="panel panel-body">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th>{{ 'service_providers.th.id'|trans }}</th>
                        <td>{{ serviceProvider.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'service_providers.th.company.name'|trans }}</th>
                        <td>{{ serviceProvider.companyName }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'service_providers.th.contact.number'|trans }}</th>
                        <td>{{ serviceProvider.contactNumber }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'service_providers.th.description'|trans }}</th>
                        <td>{{ serviceProvider.description }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'service_providers.th.currency'|trans }}</th>
                        <td>
                            {{ serviceProvider.currency.currency }}
                            ({{ serviceProvider.currency.sign }})
                        </td>
                    </tr>
                    <tr>
                        <th>{{ 'service_providers.th.creation.date'|trans }}</th>
                        <td>{{ serviceProvider.creationDate | date }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-10">
                                        <a
                                            href="{{ path(
                                                'platform_serviceProvider_edit',
                                                { 'id': serviceProvider.id }
                                            ) }}"
                                            class="btn btn-primary"
                                        >
                                            {{ 'link.action.edit'|trans }}
                                        </a>
                                        <a
                                            href="{{
                                                path('platform_serviceProvider_list')
                                            }}"
                                            class="btn btn-default"
                                        >
                                            {{ 'link.back'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {{ form_start(delete_form) }}
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-10">
                                            <input
                                                type="submit"
                                                value="{{ 'btn.delete'|trans }}"
                                                class="btn btn-danger pull-left"
                                            >
                                        </div>
                                    </div>
                                </div>
                            {{ form_end(delete_form) }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
