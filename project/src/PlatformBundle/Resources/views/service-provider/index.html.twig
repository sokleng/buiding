{% extends 'PlatformBundle::content_page_layout.html.twig' %}
{% set title = 'service_providers.title'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('platform_serviceProvider_new') }}"
                       class="btn btn-success"
                    >
                        {{ 'service_providers.action.create'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'service_providers.th.id'|trans }}</th>
                                <th>{{ 'service_providers.th.company.name'|trans }}</th>
                                <th>{{ 'service_providers.th.contact.number'|trans }}</th>
                                <th>{{ 'service_providers.th.description'|trans }}</th>
                                <th>{{ 'service_providers.th.currency'|trans }}</th>
                                <th>{{ 'service_providers.th.creation.date'|trans }}</th>
                                <th>{{ 'service_providers.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for serviceProvider in serviceProviders %}
                                <tr>
                                    <td>{{ serviceProvider.id }}</td>
                                    <td>
                                        <a href="{{ path('platform_serviceProvider_show', { 'id': serviceProvider.id }) }}">
                                            {{ serviceProvider.companyName }}
                                        </a>
                                    </td>
                                    <td>{{ serviceProvider.contactNumber }}</td>
                                    <td>{{ serviceProvider.description }}</td>
                                    <td>
                                        {% if serviceProvider.currency is not null %}
                                            {{ serviceProvider.currency.currency }}
                                            ({{ serviceProvider.currency.sign }})
                                        {% endif %}
                                    </td>
                                    <td>{{ serviceProvider.creationDate | date }}</td>
                                    <td>
                                        <a
                                            href="{{ path('platform_serviceProvider_show',
                                                {
                                                    'id' : serviceProvider.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{ path('platform_serviceProvider_edit',
                                                {
                                                    'id': serviceProvider.id
                                                })
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    {{ knp_pagination_render(serviceProviders) }}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
