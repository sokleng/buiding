{% extends "CondoBundle::content_page_layout.html.twig" %}
{% set title = 'home.title.dashboard'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-users fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.clients'|trans }}</div>
                            <div>{{ 'home.text.client.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('client_default') }}"
                    class="deactive"
                >
                    <div class="panel-footer">
                        <span class="pull-left">
                            {{ 'home.label.access.page'|trans }}
                            <i class="text-danger">{{'home.label.coming.soon'|trans }}</i>
                        </span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-basket fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.services'|trans }}</div>
                            <div>{{ 'home.text.service.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('service_default') }}"
                    class="deactive"
                >
                    <div class="panel-footer">
                        <span class="pull-left">
                            {{ 'home.label.access.page'|trans }}
                            <i class="text-danger">{{'home.label.coming.soon'|trans }}</i>
                        </span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-building fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.buildings'|trans }}</div>
                            <div>{{ 'home.text.condominium.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('condominium_management_default') }}"
                    class="deactive"
                >
                    <div class="panel-footer">
                        <span class="pull-left">
                            {{ 'home.label.access.page'|trans }}
                            <i class="text-danger">{{'home.label.coming.soon'|trans }}</i>
                        </span>

                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-briefcase fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.projects'|trans }}</div>
                            <div>{{ 'home.text.project.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('project_realty_default') }}"
                    {% if not is_granted(constant('CondoBundle\\Constant\\SecurityRole::PROJECT')) %}
                        class="deactive"
                    {% endif %}
                >
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'home.label.access.page'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.developers'|trans }}</div>
                            <div>{{ 'home.text.developer.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('developer_home') }}"
                    {% if not is_granted(constant('CondoBundle\\Constant\\SecurityRole::DEVELOPER')) %}
                        class="deactive"
                    {% endif %}
                >
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'home.label.access.page'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-building-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ 'link.realty.companies'|trans }}</div>
                            <div>{{ 'home.text.realty.company.management'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ 'home.discription'|trans }}
                </div>
                <a
                    href="{{ path('realty_company_home') }}"
                    {% if not is_granted(constant('CondoBundle\\Constant\\SecurityRole::REALTY_COMPANY')) %}
                        class="deactive"
                    {% endif %}
                >
                    <div class="panel-footer">
                        <span class="pull-left">{{ 'home.label.access.page'|trans }}</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
