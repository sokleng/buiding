{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = 'project.name'|trans ~ " - Edit Unit Type: " ~ type.code %}

{% block content %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.code'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.code,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.size'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.size,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.commonAreaSize'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.commonAreaSize,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.roomCount'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.roomCount,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.bedroomCount'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.bedroomCount,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.bathroomCount'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.bathroomCount,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unitType.label.description'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        edit_form.description,
                        {
                            'attr': {
                                'class': 'form-control',
                                'rows' : 5
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input
                        type="submit"
                        value="{{ 'btn.save'|trans }}"
                        class="btn btn-success"
                    >
                    <a
                        href="{{
                            path('project_unitType_list',
                            {'project': project.id})
                        }}"
                        class="btn btn-default"
                    >
                        {{ 'link.back'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(edit_form) }}
{% endblock %}

