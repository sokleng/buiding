{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title =  project.name ~ ' - Settings - Unit Status' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('project_unitStatus_new', {'project': project.id}) }}"
                       class="btn btn-success"
                    >
                        {{ 'unit.status.link.new.unit.status'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'unit.status.th.status'|trans }}</th>
                                <th>{{ 'unit.status.th.is.a.closed.status'|trans }}</th>
                                <th>{{ 'unit.status.th.enabled'|trans }}</th>
                                <th>{{ 'unit.status.th.creation.date'|trans }}</th>
                                <th>{{ 'unit.status.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for status in project.unitStatuses %}
                                <tr>
                                    <td>{{ status.name }}</td>
                                    <td>{{ status.isClosedStatus ? 'Yes' : 'No' }}</td>
                                    <td>{{ status.isEnabled ? 'Yes' : 'No' }}</td>
                                    <td>{{ status.creationDate | date }}</td>
                                    <td>
                                        <a href="{{ path('project_unitStatus_edit', {'project': project.id, 'status': status.id}) }}"
                                           class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
