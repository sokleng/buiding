{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = project.name ~ " - Edit Status: " ~ status.name %}

{% block content %}
    <div class="panel panel-body">
        {{ form_start(edit_form) }}
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.setting.unit.status.label.name'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.name,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <div class="checkbox">
                        <label>
                            {{form_widget(edit_form.closedStatus)}}
                            {{ 'project.setting.unit.status.label.closedStatus'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <div class="checkbox">
                        <label>
                            {{form_widget(edit_form.enabled)}}
                            {{ 'project.setting.unit.status.label.enabled'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-10">
                        <input
                            type="submit"
                            value="{{ 'btn.save'|trans }}"
                            class="btn btn-success"
                        >
                        <a
                            href="{{
                                path('project_unitStatus_list',
                                {'project': project.id})
                            }}"
                            class="btn btn-default"
                        >
                            {{ 'link.back'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
