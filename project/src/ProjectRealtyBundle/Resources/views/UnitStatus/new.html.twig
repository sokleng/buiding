{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = project.name  ~ '-' ~ 'project.name'|trans %}

{% block content %}
    {{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.setting.unit.status.label.name'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        form.name,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <div class="checkbox">
                    <label>
                        {{form_widget(form.closedStatus)}}
                        {{ 'project.setting.unit.status.label.closedStatus'|trans }}
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <div class="checkbox">
                    <label>
                        {{form_widget(form.enabled)}}
                        {{ 'project.setting.unit.status.label.enabled'|trans }}
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input
                        type="submit"
                        value="{{ 'btn.create'|trans }}"
                        class="btn btn-success"
                    >
                    <a
                        href="{{
                            path('project_unitStatus_list',
                            {'project': project.id})
                        }}"
                        class="btn btn-default"
                    >
                        {{ 'link.back'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

