{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = 'project.name'|trans ~ " - Edit Unit: " ~ unit.id %}

{% block content %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unit.room.number'|trans }}
                </label>
                <div class="col-xs-2">
                    {{form_widget(
                        edit_form.room_number,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unit.type'|trans }}
                </label>
                <div class="col-xs-2">
                    {{form_widget(
                        edit_form.type,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unit.floor'|trans }}
                </label>
                <div class="col-xs-2">
                    {{form_widget(
                        edit_form.floor,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'project.unit.price'|trans }}
                </label>
                <div class="col-xs-2">
                    {{form_widget(
                        edit_form.price,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input
                        type="submit"
                        value="{{ 'btn.save'|trans }}"
                        class="btn btn-success"
                    />
                    <a
                        href="{{
                            path('project_units_list', {'project': project.id})
                        }}"
                        class="btn btn-default"
                    >
                        {{ 'link.back'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(edit_form) }}
{% endblock %}

