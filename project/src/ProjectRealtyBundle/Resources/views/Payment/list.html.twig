{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title =  'project.name'|trans ~ ' - Payments' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('project_payments_new', {'project': project.id}) }}"
                       class="btn btn-success"
                    >
                        {{ 'payment.link.new.payment'|trans }}
                    </a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover"
                               id="payments-table"
                        >
                            <thead>
                            <tr>
                                <th>{{ 'payment.th.date'|trans }}</th>
                                <th>{{ 'payment.th.contact'|trans }}</th>
                                <th>{{ 'payment.th.unit'|trans }}</th>
                                <th>{{ 'payment.th.payment.method'|trans }}</th>
                                <th>{{ 'payment.th.receiver'|trans }}</th>
                                <th>{{ 'payment.th.amount'|trans }}</th>
                                <th>{{ 'payment.th.payment.date'|trans }}</th>
                                <th>{{ 'payment.th.received'|trans }}</th>
                                <th>{{ 'payment.th.description'|trans }}</th>
                                <th>{{ 'payment.th.status'|trans }}</th>
                                <th>{{ 'payment.th.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for payment in payments %}
                                <tr>
                                    <td>{{ payment.creationDate | date }}</td>
                                    <td>{{ payment.contact.name }}</td>
                                    <td>{{ payment.unit.roomNumber }}</td>
                                    <td>{{ payment.paymentMethod }}</td>
                                    <td>{{ payment.receiver }}</td>
                                    <td>{{ payment.amount }}</td>
                                    <td>{{ payment.paymentDate | date }}</td>
                                    <td>
                                        {{ payment.received ?
                                            'payment.received.yes'|trans :
                                            'payment.received.no'|trans
                                        }}
                                    </td>
                                    <td>{{ payment.description }}</td>
                                    <td>{{ payment.status|paymentStatus|trans }}</td>
                                    <td>
                                        <a
                                            href="{{
                                                path(
                                                    'project_payments_show',
                                                    {
                                                        'id' : payment.id,
                                                        'project' : project.id
                                                    }
                                                )
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.show'|trans }}
                                        </a>
                                        <a
                                            href="{{
                                                path(
                                                    'project_payments_edit',
                                                    {
                                                        'payment': payment.id,
                                                        'project': project.id
                                                    }
                                                )
                                            }}"
                                            class="btn btn-sm btn-primary"
                                        >
                                            {{ 'action.edit'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}

{% block additional_resources %}
    {{ parent() }}
    {% include 'CondoBundle:partials:datatable_resource.html.twig' with
        {'selector': '#payments-table'}
    %}
{% endblock %}
