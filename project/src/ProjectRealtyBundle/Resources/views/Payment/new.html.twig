{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = 'project.name'|trans ~ ' - ' ~ 'new.payment'|trans %}

{% block content %}
    <div class="col-sm-6">
        {{ form_start(form, {'attr': {'class' : 'form-horizontal'}}) }}
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.contact'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.contact, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.unit'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.unit, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.paymentMethod'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.paymentMethod, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.receiver'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.receiver, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.amount'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.amount, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.status'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.status, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    {{ 'project.payment.label.description'|trans }}
                </label>
                <div class="col-sm-6">
                    {{ form_widget(form.description, {'attr': {'class' : 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-10">
                    <div class="checkbox">
                        <label>
                            {{form_widget(form.received)}}
                            {{ 'project.payment.label.received'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3">
                </div>
                <input type="submit" class="btn btn-success" value="{{'btn.create'|trans}}"/>
                <a
                    href="{{ path(
                        'project_payments_list',
                        {'project': project.id}
                    ) }}"
                    class="btn btn-default"
                >
                    {{'link.back'|trans}}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


{# Load Select2 #}
{% block additional_resources %}
    {% include 'CondoBundle:partials:select2_resource.html.twig' with
        {'selector': '#project_payment_unit, #project_payment_contact'}
    %}
{% endblock %}
