{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = 'project.name'|trans ~ ' - Show Payment' %}
{% block content %}
    <div class="panel panel-body">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>{{ 'project.unit.label.id'|trans }}</th>
                            <td>{{ payment.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.receiver'|trans }}</th>
                            <td>{{ payment.receiver }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.amount'|trans }}</th>
                            <td>{{ payment.amount }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.paymentMethod'|trans }}</th>
                            <td>{{ payment.paymentMethod }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.received'|trans }}</th>
                            <td>
                                {{ payment.received ?
                                    'payment.received.yes'|trans :
                                    'payment.received.no'|trans
                                }}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.status'|trans }}</th>
                            <td>{{ payment.status|paymentStatus|trans }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'project.payment.label.description'|trans }}</th>
                            <td>{{ payment.description }}</td>
                        <tr>
                        <td colspan="2">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-10">
                                        <a
                                            href="{{
                                                path(
                                                    'project_payments_edit',
                                                    {
                                                        'payment': payment.id,
                                                        'project': project.id
                                                    }
                                                )
                                            }}"
                                            class="btn btn-primary"
                                        >
                                            {{ 'link.action.edit'|trans }}
                                        </a>
                                        <a
                                            href="{{
                                                path('project_payments_list',
                                                {'project': project.id})
                                            }}"
                                            class="btn btn-default"
                                        >
                                            {{ 'link.back'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {{ form_start(delete_form) }}
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-10">
                                            <input
                                                type="submit"
                                                value="{{ 'btn.delete'|trans }}"
                                                class="btn btn-danger pull-left"
                                            >
                                        </div>
                                    </div>
                                </div>
                            {{ form_end(delete_form) }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

