{% extends 'ProjectRealtyBundle::content_page_layout.html.twig' %}
{% set title = "Edit Payment: " ~ project.name %}

{% block content %}
    <div class="panel panel-body">
        {{ form_start(edit_form) }}
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.contact'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.contact,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.unit'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.unit,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.paymentMethod'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.paymentMethod,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.receiver'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.receiver,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.amount'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.amount,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.status'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.status,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-2 control-label">
                        {{ 'project.payment.label.description'|trans }}
                    </label>
                    <div class="col-xs-4">
                        {{form_widget(
                            edit_form.description,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-10">
                    <div class="checkbox">
                        <label>
                            {{form_widget(edit_form.received)}}
                            {{ 'project.payment.label.received'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-10">
                        <input
                            type="submit"
                            value="{{ 'btn.save'|trans }}"
                            class="btn btn-success"
                        >
                        <a
                            href="{{ path(
                                'project_payments_list',
                                {'project': project.id}
                            ) }}"
                            class="btn btn-default"
                        >
                            {{ 'link.back'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-10">
                        <input
                            type="submit"
                            value="{{ 'btn.delete'|trans }}"
                            class="btn btn-danger pull-left"
                        >
                    </div>
                </div>
            </div>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
