{% extends 'CondominiumManagementBundle::content_page_layout.html.twig' %}
{% set title = condominium.name ~ ' - ' ~ 'condo.expense.title.invoice'|trans ~ ' - ' ~ 'condo.expense.invoice.title.edit'|trans ~ ' - #' ~ expendInvoice.id %}

{% block content %}
    {% set currencySign = ''%}
    {% if expendInvoice.currency is not null %}
        {% set currencySign = expendInvoice.currency.sign %}
    {% endif %}
    {%
        include 'CondominiumManagementBundle:Partial:expend_invoice_form.html.twig'
        with {'currencySign': currencySign }
    %}
{% endblock %}
