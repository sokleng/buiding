<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
            >
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">
                {{ 'condo.client.unit.price'|trans }}
            </h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>
                            {{ 'condo.client.current.unit.price'|trans }}:
                        </label>
                        <span>
                            {% if client.currency is not null %}
                                {{client.currency.sign}}
                            {% endif %}
                            {{ client.unitPrice|number_format(2, '.', ',') }}
                        </span>
                    </div>
                    <div class="form-group">
                        <label>
                            {{ 'condo.client.unit.roomnumber'|trans }}:
                        </label>
                        <span>{{client.unit.roomNumber}}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <hr/>
                    <div id="edit-price-manual">
                        <div class="row">
                            <form method="post"
                                action="{{ path(
                                    'condominium_client_edit_unit_price',
                                    {
                                        'condominium': client.unit.condominium.id,
                                        'clientUnit': client.id
                                    }
                                ) }}"
                            >
                                <div class="col-md-6">
                                    <input
                                        type="text"
                                        name="unitPrice"
                                        value="{{client.unit.price}}"
                                        class="form-control"
                                        required="required"
                                    >
                                </div>
                                <button
                                    type="submit"
                                    class="btn btn-primary"
                                >
                                    {{ 'btn.save'|trans }}
                                </button>
                                <a
                                    onclick="ClientUnitPrice.hide_edit_manual_price()"
                                    class="btn btn-danger"
                                >
                                    {{ 'btn.cancel'|trans }}
                                </a>
                            </form>
                        </div>
                    </div>
                    <a
                        id="btn-edit-price-manual"
                        class="btn btn-primary"
                        onclick="ClientUnitPrice.show_edit_manual_price()"
                    >
                        {{ 'condo.client.edit.price.manual'|trans }}
                    </a>
                    <form method="post"
                        action="{{ path(
                            'condominium_client_edit_unit_price',
                            {
                                'condominium': client.unit.condominium.id,
                                'clientUnit': client.id
                            }
                        ) }}"
                    >
                        <input
                            type="hidden"
                            name="unitPrice"
                            value="{{client.unit.price}}"
                        >
                        <button
                            id="get-price-from-unit"
                            class="btn btn-primary"
                            type="submit"
                        >
                            {{ 'condo.client.get.price.from.unit'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

