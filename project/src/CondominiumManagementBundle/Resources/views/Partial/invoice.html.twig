<link rel="stylesheet" href="{{ base_dir ~ asset('css/bootstrap.min.css') }}">
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-left">
                <h3>{{ invoice.condominium.name }}</h3>
            </div>
            <div class="pull-right col-lg-7">
                <div class="pull-left col-lg-12">
                    <h3>{{ 'condo.client.label.invoice.title'|trans }}</h3>
                    <p>{{ 'condo.client.label.invoice.id'|trans }}(#): {{ invoice.id }}</p>
                    <p>{{ 'condo.client.label.invoice.date'|trans }}: {{ invoice.creationDate|date("m/d/Y") }}</p>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'condo.client.invoice.id'|trans }}</th>
                                    <th>{{ 'condo.client.invoice.title'|trans }}</th>
                                    <th>{{ 'condo.client.invoice.vat'|trans }} (%)</th>
                                    <th>{{ 'condo.client.invoice.description'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{ invoice.id }}</td>
                                    <td>{{ invoice.title }}</td>
                                    <td>
                                        {{ invoice.vat }}(%)
                                    </td>
                                    <td>{{ invoice.description }}</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right">
                                        {{ 'condo.client.invoice.sub.total'|trans }}
                                    </td>
                                    <td>
                                        {% set sign = '' %}
                                        {% if invoice.currency is not null %}
                                            {% set sign = invoice.currency.sign %}
                                        {% endif %}
                                        ({{ sign }})
                                        {{ invoice.subTotal|number_format(2, '.', ',') }}
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right">
                                        {{ 'condo.client.invoice.grand.total'|trans }}
                                    </td>
                                    <td>
                                        ({{ sign }})
                                        {{ invoice.grandTotal|number_format(2, '.', ',') }}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="col-lg-6 pull-left">
                            <hr/>
                            {{ 'condo.client.invoice.recipient.signature'|trans }}
                        </div>
                        <div class="col-lg-6 pull-right">
                            <hr/>
                            {{ 'condo.client.invoice.customer.signature'|trans }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

