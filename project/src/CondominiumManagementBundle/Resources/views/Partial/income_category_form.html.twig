{{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6 col-lg-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            {{ 'condo.label.income.category.name'|trans }}
                            <span class="required-field">*</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.name,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-5 col-md-10">
                        <input
                            type="submit"
                            value="{{ 'btn.save'|trans }}"
                            class="btn btn-success"
                        >
                        <a
                            href="{{ path(
                                'condominium_income_category_list',
                                {'condominium': condominium.id}
                            ) }}"
                            class="btn btn-default"
                        >
                            {{ 'link.back'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
