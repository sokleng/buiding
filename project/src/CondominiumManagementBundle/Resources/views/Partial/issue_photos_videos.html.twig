{% if issue.databaseFiles|length > 0 %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading lead">
                    <i class="fa fa-camera-retro fa-fw"></i>
                    {{ 'client_issue.label.photos.and.videos'|trans }}
                </div>
                <div class="panel-body">
                     <div class="row">
                        {% for databasefile in issue.databaseFiles %}
                            <div class="col-xs-12 col-md-6 div-issue-photos">
                                {% if databasefile.isImage() %}
                                    <img class="img-thumbnail"
                                         src="{{ path('condo_resource', {'fileId': databasefile.id}) }}"
                                         alt="{{ databasefile.name }}"
                                    >
                                {% endif %}
                                {% if databasefile.isVideo() %}
                                    <video controls>
                                        <source src="{{ path('condo_resource', {'fileId': databasefile.id}) }}"
                                                type="{{ databasefile.getMimeType }}"
                                        >
                                    </video>
                                {% endif %}
                            </div>
                            {% if (loop.index) % 2 == 0 %}
                                <div class="clearfix"></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
