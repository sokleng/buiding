{{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.title'|trans }}
                    <span class="required-field">*</span>
                </label>
                <div class="col-xs-8">
                    {{form_widget(
                        form.title,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.short.description'|trans }}
                    <span class="required-field">*</span>
                </label>
                <div class="col-xs-8">
                    {{form_widget(
                        form.shortDescription,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.description'|trans }}
                    <span class="required-field">*</span>
                </label>
                <div class="col-xs-8">
                    {{form_widget(
                        form.description,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.publish.date'|trans }}
                    <span class="required-field">*</span>
                </label>
                <div class="col-xs-4">
                    {% set attr = {'class': 'form-control datepicker'} %}
                    {% if news is defined %}
                        {% set attr = {
                                'class': 'form-control datepicker',
                                'value': news.publishDate|date('d-M-Y H:m')
                            }
                        %}
                    {% endif %}
                    {{form_widget(
                        form.publishDate,
                        {
                            'attr': attr
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.end.date'|trans }}
                    <span class="required-field">*</span>
                </label>
                <div class="col-xs-4">
                    {% set attr = {'class': 'form-control datepicker'} %}
                    {% if news is defined and news.endDate is not null %}
                        {% set attr = {
                                'class': 'form-control datepicker',
                                'value': news.endDate|date('d-M-Y H:m')
                            }
                        %}
                    {% endif %}
                    {{form_widget(
                        form.endDate,
                        {
                            'attr': attr
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.picture'|trans }}
                </label>
                <div class="col-xs-4">
                    {{form_widget(
                        form.picture,
                        {
                            'attr': {
                                'class': 'form-control'
                            }
                        }
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-xs-2 control-label">
                    {{ 'condo.news.label.is.published'|trans }}
                </label>
                <div class="col-xs-2">
                    {{form_widget(
                        form.isPublished
                    )}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-offset-2 col-xs-10">
                    <input
                        type="submit"
                        value="{{ 'btn.save'|trans }}"
                        class="btn btn-success"
                    >
                    <a
                        href="{{ path(
                            'condominium_news_list',
                            {'condominium': condominium.id}
                        ) }}"
                        class="btn btn-default"
                    >
                        {{ 'link.back'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
