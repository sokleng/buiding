{% extends 'WeBridgeUserBundle::content_page_layout.html.twig' %}
{% set title =  'profile.title'|trans  %}

{% block content %}
<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6">
        {{ render(controller('WeBridgeUserBundle:UserProfile:edit')) }}
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6">
        {{ form_start(
            form,
                {
                    'attr': {
                        'class' : 'form-horizontal',
                    }
                }
        )}}
            <div class="panel panel-default">
                <div class="panel-heading">{{'profile.label.change.password'|trans}}</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3 control-label">
                                {{ 'profile.label.current.password'|trans }}
                            </label>
                            <div class="col-sm-6">
                                {{ form_widget(
                                    form.current_password,
                                    {
                                        'attr': {
                                            'class' : 'form-control',
                                        }
                                    }
                                )}}
                                <span class="form-error-field">
                                    {{ form_errors(form.current_password) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3 control-label">
                                {{ 'profile.label.new.password'|trans }}
                            </label>
                            <div class="col-sm-6">
                                {{ form_widget(
                                    form.plainPassword.first,
                                    {
                                        'attr': {
                                            'class' : 'form-control',
                                        }
                                    }
                                )}}
                                <span class="form-error-field">
                                    {{ form_errors(form.plainPassword.first) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3 control-label">
                                {{ 'profile.label.confirm.password'|trans }}
                            </label>
                            <div class="col-sm-6">
                                {{ form_widget(
                                    form.plainPassword.second,
                                    {
                                        'attr': {
                                            'class' : 'form-control',
                                        }
                                    }
                                )}}
                                <span class="form-error-field">
                                    {{ form_errors(form.plainPassword.second) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-md-offset-3 col-md-3">
                                <input
                                    type="submit"
                                    class="btn btn-success"
                                    value="{{'btn.save'|trans }}"
                                >
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        {{form_end(form) }}
    </div>
</div>
{% endblock %}


