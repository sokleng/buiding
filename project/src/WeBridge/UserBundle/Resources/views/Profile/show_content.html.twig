{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>{{ 'profile.th.name'|trans }}</th>
                                <td>{{ user.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'profile.th.username'|trans }}</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'profile.th.email'|trans }}</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'profile.th.phone.number'|trans }}</th>
                                <td>{{user.phoneNumber}}</td>
                            </tr>
                             <tr>
                                <td colspan="2">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xs-10">
                                                <a href="{{ path('fos_user_change_password') }}">
                                                    <button class="btn btn-primary">
                                                        {{ 'action.edit'|trans }}
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

